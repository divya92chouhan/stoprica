= form_with(model: league, local: true) do |form|
  - if league.errors.any?
    #error_explanation
      %h2
        = pluralize(league.errors.count, "error")
        prohibited this league from being saved:
      %ul
        - league.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_field :name, id: :league_name
  .field
    = form.label 'Tip'
    = form.select :league_type, options_for_select(League.league_types.collect { |s| [s[0].humanize, s[0]] }, selected: @league.league_type), { include_blank: true}
  .actions
    = form.submit
