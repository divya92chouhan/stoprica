= form_for @race_result do |f|
  - if @race_result.errors.any?
    #error_explanation
      %h2= "#{pluralize(@race_result.errors.count, "error")} prohibited this race_result from being saved:"
      %ul
        - @race_result.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :racer
    = f.text_field :racer
  .field
    = f.label :race
    = f.text_field :race
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :lap_times
    = f.text_area :lap_times
  .actions
    = f.submit 'Save'
