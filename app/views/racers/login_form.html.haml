%h1
  Prijava

%form{ action: '/racers/login', method: 'POST' }
  = hidden_field_tag :authenticity_token, form_authenticity_token
  .field
    .mdl-textfield.mdl-js-textfield
      %input#email.mdl-textfield__input{type: 'email', name: 'racer[email]', required: true}
      %label.mdl-textfield__label{for: 'email'} Email
  .field
    .mdl-textfield.mdl-js-textfield
      %input#phone_number.mdl-textfield__input{pattern: "-?[0-9]*(\\.[0-9]+)?", type: 'text', name: 'racer[phone_number]', required: true}
      %label.mdl-textfield__label{for: 'phone_number'} Broj mobitela
      %span.mdl-textfield__error Unesi ispravan broj u formatu 385911234567!
  %hr
  .field
    %input{ type: 'submit', value: 'Prijavi se', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent' }
