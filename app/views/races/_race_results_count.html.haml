%span.mdl-chip.mdl-chip--contact
  %span.mdl-chip__contact.mdl-color--blue.mdl-color-text--white= @race.race_results.count
  %span.mdl-chip__text Ukupno

- if @race.ended_at
  - unless @race.race_results.where(status: 3).count.zero?
    %span.mdl-chip.mdl-chip--contact
      %span.mdl-chip__contact.mdl-color--blue.mdl-color-text--white= @race.race_results.where(status: 3).count
      %span.mdl-chip__text Zavr≈°ilo

  - unless @race.race_results.where(status: 4).count.zero?
    %span.mdl-chip.mdl-chip--contact
      %span.mdl-chip__contact.mdl-color--blue.mdl-color-text--white= @race.race_results.where(status: 4).count
      %span.mdl-chip__text DNF

  - unless @race.race_results.where(status: 5).count.zero?
    %span.mdl-chip.mdl-chip--contact
      %span.mdl-chip__contact.mdl-color--blue.mdl-color-text--white= @race.race_results.where(status: 5).count
      %span.mdl-chip__text DNS


  - unless @race.race_results.where(status: 6).count.zero?
    %span.mdl-chip.mdl-chip--contact
      %span.mdl-chip__contact.mdl-color--blue.mdl-color-text--white= @race.race_results.where(status: 6).count
      %span.mdl-chip__text DSQ

  - unless @race.race_results.where(start_number_id: nil).count.zero?
    %span.mdl-chip.mdl-chip--contact
      %span.mdl-chip__contact.mdl-color--blue.mdl-color-text--white= @race.race_results.where(start_number_id: nil).count
      %span.mdl-chip__text{ title: 'Natjecatelji koji se nisu pojavili na utrci.' } DNP
